<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Required by R packages which want to access the camera. -->
    <key>com.apple.security.device.camera</key>
    <true/>

    <!-- Required by R packages which want to access the microphone. -->
    <key>com.apple.security.device.audio-input</key>
    <true/>

    <!-- Required to knit to Word -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>

    <!-- Allow debugging compiled code in R and R packages -->
    <key>com.apple.security.get-task-allow</key>
    <true/>

    <!-- Needed to open the R shared library with libloading -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>

    <!-- TODO: What EXACTLY was this for? https://github.com/posit-dev/positron/pull/958 -->
    <key>com.apple.security.cs.disable-executable-page-protection</key>
    <true/>
</dict>
</plist>
